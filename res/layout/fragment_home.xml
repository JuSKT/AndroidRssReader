<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    
    <TextView
        android:id="@+id/home_body_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_body_name_text"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        />
    
    <ImageView
        android:id="@+id/ombudsman_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/home_body_name"
        android:contentDescription="The european ombudsman logo"
        android:src="@drawable/ombudsman_logo" />
    
    <TextView
        android:id="@+id/home_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_alignLeft="@+id/ombudsman_logo"
        android:layout_below="@+id/home_body_name"
        android:text="@string/home_body_title_text"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/home_body_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home_body_title"
        android:text="@string/home_body_text" />
    
</RelativeLayout>
